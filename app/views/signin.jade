doctype html
html
	head
		meta(charset='UTF-8')
		title Sign In
		link(rel='stylesheet', href='/css/style.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		block scripts
			script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js')
			script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
			script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
			script(src='/js/index.js')
	body
		.background-image
		.login-page
			.content
				.container
					.form
						p(style='color:red') #{sms}
						form.login-form(name='login', method='POST', action='signin')
							input(name='usr', type='text', placeholder='username', required='')
							input(name='pass', type='password', placeholder='password', required='')
							input(name='inID', type='text', placeholder='instructor ID', required='')
							table(style='border-collapse: collapse; ')
								tr
									td(colspan='4', style='padding: 0px; text-align: left; ')
										span.w3-margin-right Status:
								tr
									td(style='padding: 15px 15px 15px')
										input(type='radio', name='status' value='instructor')
										| Instructor					         
									td(style='padding: 15px 15px 15px;')
										input(type='radio', name='status' value='executive')
										| Executive
							button(type='submit') singin
							p.message
								| Already registered?
								a(href='login')    Login
							
