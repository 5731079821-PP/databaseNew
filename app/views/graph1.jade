extends layout.jade
block content
  link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Roboto|Raleway:600,400,200', rel='stylesheet', type='text/css')
  link(rel='stylesheet', href='/css/materialize.min.css')
  link(rel='stylesheet', href='/css/examples.css')
  link(rel='stylesheet', href='/css/vizuly.css')
  link(rel='stylesheet', href='/css/vizuly_radial_progress.css')
  script(type='text/javascript', src='/js/jquery-2.1.1.min.js')
  script(src='/js/materialize.min.js')
  script(src='/js/d3.min.js')
  script(src='/js/vizuly_core.min.js')
  script(src='/js/vizuly_radialprogress.min.js')
  script(src='/js/radialprogress_test.js')
  script(src='/js/theme_showreel.js')

  // This is our Materialize.css settings panel on the left side of the test container
  ul#slide-out
    li
      div(style='margin-left:0px; height:0px; width:180px; margin-right:20px;')
        .input-field.col.s12(style='margin-top:30px')
          select(onchange='changeSkin(this.value)')
            option(value='', selected='') Select Skin
            option(value='Fire') Fire
            option(value='Business') Business
            option(value='White') White
            option(value='Neon') Neon
            option(value='Alert') Alert
          label Skin
        .input-field.col.s12(style='margin-top:30px;')
          select#displayEndCap(onchange='changeEndCap(this.value)')
            option(value='0') Square
            option(value='1', selected='') Rounded
          label End Cap
        .input-field.col.s12(style='margin-top:30px;')
          select#displaySelect(onchange='changeSize(this.value)')
            option#currentDisplay(value='')
            option(value='1000,1000') 1000px - 1000px
            option(value='800,600') 800px - 600px
            option(value='375,667') 375px - 667px
            option(value='320,568') 320px - 568px
          label Display Size
        .input-field.col.s12(style='margin-top:30px')
          select(onchange='changeData(this.value);')
            option(value='20') 20
            option(value='60') 60
            option(value='80') 80
            option(value='150', selected='') 150
            option(value='250') 250
            option(value='350') 350
          label Value
  main
    #viz_container.z-depth-3
      #div1.radial_container
      #div2.radial_container
      #div3.radial_container
        
